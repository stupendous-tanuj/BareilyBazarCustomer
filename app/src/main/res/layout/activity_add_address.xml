<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar_root_layout"
        layout="@layout/toolbar_sub_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_add_address"
        android:layout_below="@+id/toolbar_root_layout">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="Flat/Building/Street"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <EditText
                android:id="@+id/et_address_flat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Enter Flat/Building/Street"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Address Identifier"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <EditText
                android:id="@+id/et_address_identifier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Enter Address Identifier (Ex. Noida)"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Locality"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <EditText
                android:id="@+id/et_address_locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Enter Locality (Ex. Sector 22)"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Pincode"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <EditText
                android:id="@+id/et_address_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Enter pincode"
                android:inputType="phone"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="City"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <EditText
                android:id="@+id/et_address_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:enabled="false"
                android:padding="@dimen/dp_10"
                android:text="Bareily"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="State"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <EditText
                android:id="@+id/et_address_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:enabled="false"
                android:padding="@dimen/dp_10"
                android:text="Uttar Pradesh"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_base"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="Add Address"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_19" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:visibility="gone" />

</RelativeLayout>
